{
    "manifest_version": 2,
    "name": "Green Wallet",
    "version": "0.3.0",
    "description": "The extension provides user interface to work with Zilliqa TestNet",
    "icons": {
        "128": "icon128.png",
        "48": "icon48.png",
        "16": "icon16.png"
    },
    "browser_action":{
        "default_icon": "icon16.png",
        "default_popup": "popup.html"
    },
    "background": {
        "scripts": ["background.js"],
        "persistent": true
    },
    
    "permissions": [
        "storage"
    ]
}
